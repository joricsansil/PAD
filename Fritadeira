const int res = 13;
const int sen = 12;
const int senF = 11;
const int senT = 10;
const int mot = 9;
const int valS = 8;
const int valE = 7;
int contador = 0;

void setup() {
    pinMode(res, INPUT);
    pinMode(sen, OUTPUT);
    pinMode(senF, INPUT);
    pinMode(senT, INPUT);
    pinMode(mot, OUTPUT);
    pinMode(valS, OUTPUT);
    pinMode(valE, OUTPUT);
}


void loop() {

    //Contagem de ciclo
    while(contador <= 10) {
        //Verifica se o botão foi acionado;
        if(digitalRead(res) == HIGH) {
            
            //Verifica se a temperatura atingiu a faixa;
            if(sen >= 190) {
                //Aciona motor/descida
                digitalWrite(mot, HIGH);

                //Cesto imerso no óleo
                //Aciona sensor fim de curso aciona Fundo
                if(digitalRead(senF) == HIGH) {
                    //Tempo de fritura
                    delay(300000);

                    //Motor aciona/Subindo
                    digitalWrite(mot, LOW);
                }
                

                //Motor fim de curso aciona TOPO
                if(digitalRead(senT) == HIGH) {
                    ++contador;
                }

            }
        }
    }

    //Valvula de saida abre por 30 seg
    digitalWrite(valS, HIGH);
    delay(30000);

    //Valvula de entrada se abre por Xs
    digitalWrite(valE, HIGH);
}
